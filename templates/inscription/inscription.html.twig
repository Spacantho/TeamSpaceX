{% extends 'base_grid.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<div class="container my-5 d-flex justify-content-center">

        <div class="card px-5 py-5 bg-light radius">
            
        {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <h1>Inscription</h1>

            {{ form_start(inscriptionForm, {attr: {class: 'mashco'}}) }}
                {{ form_row(inscriptionForm.email) }}
                {{ form_row(inscriptionForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(inscriptionForm.agreeTerms, {
                    label: 'Accepter les CGU'
                }) }}
            <label>
                <input type="checkbox" name="_remember_me" checked/>
                Rester connecté grâce à un cookie
            </label>


            <button type="submit" class="btn btn-primary d-block mt-3">S'inscrire</button>
            {{ form_end(inscriptionForm) }}

        
        </div>
</div>



{% endblock %}
